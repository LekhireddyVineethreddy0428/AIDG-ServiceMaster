<core:FragmentDefinition xmlns="sap.m"
    xmlns:sf="sap.ui.comp.smartform"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:core="sap.ui.core">
    <Dialog id="deleteDialog" class="sapUiContentPadding" title="Create Delete Request">
        <content>
            <smartForm:SmartForm id="mySmartForm" validationMode="Async" editable="true" editTogglable="false">
                <smartForm:Group >
                    <smartForm:GroupElement >
                        <smartField:SmartField id="prioField" value="{reqprio}" textInEditModeSource="ValueList"/>
                    </smartForm:GroupElement>
                    <smartForm:GroupElement >
                        <smartField:SmartField id="descField" value="{req_desc}" />
                    </smartForm:GroupElement>
                </smartForm:Group>
            </smartForm:SmartForm>
        </content>
        <buttons>
            <Button text="Submit" type="Emphasized" press="handleDelete"/>
            <Button text="Cancel" press="onDeleteCloseDialog"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>