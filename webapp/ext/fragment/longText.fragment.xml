<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form">

    <Panel width="auto">
        <content>
            <Text text="{= 'Language :- ' + ${mlang} }" />
            <VBox visible="{= ${IsActiveEntity} === true ? false : true }">
                <TextArea id="BasicTxt-1" growing="true" growingMaxLines="14" maxLength="8064" width="100%" value="{long_text_db}" editable="{LONG_TEXTHIDE}" />
            </VBox>
            <VBox visible="{= ${IsActiveEntity} }">
                <TextArea id="BasicTxt-2" growing="true" growingMaxLines="14" width="100%" value="{long_text}" editable="false" />
            </VBox>
        </content>
    </Panel>

</core:FragmentDefinition>